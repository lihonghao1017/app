<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_finance_time"
            style="@style/Text.White.Slight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:30"
            android:paddingTop="5dp"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:layout_gravity="left"
            android:background="#65A0E2" />

        <TextView
            android:id="@+id/tv_finance_leve"
            android:text="底"
            style="@style/Text.White.Smail"
            android:background="@color/nav_title_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />
    </RelativeLayout>

    <TextView
        android:text="在在在在在在在"
        style="@style/Text.Black.General"
        android:id="@+id/tv_finance_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="12dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_finance_forward"
            style="@style/Text.Black.Smail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:text="fdsfsdff"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_finance_project"
            style="@style/Text.Black.Smail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:text="22222"
            android:id="@+id/tv_finance_result"
            style="@style/Text.Black.Smail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>