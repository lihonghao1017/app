<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_jinmessage_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        style="@style/Text.Black.General"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_text_more"
        style="@style/Text.Gray.Blue.Slight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="全文"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_jinmessage_date"
        style="@style/Text.Deep.Gray.Slight"
        android:text="2015-5-11"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/gv_jinmessage_imgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="10dip"
        android:numColumns="3"
        android:layout_marginRight="10dp"
        android:listSelector="@null"
        android:background="@null"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="10dip"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"></GridView>
</LinearLayout>