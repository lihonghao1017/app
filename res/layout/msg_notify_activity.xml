<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <View
        style="@style/horizontal_line"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/rl_msg_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rl_rect_gray_selector"
        android:paddingBottom="7dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="7dp" >

        <TextView
            style="@style/rl_rect_set_text"
            android:text="声音" />

        <ToggleButton
            android:id="@+id/shengyin_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/btn_sys_set_toggle"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View style="@style/horizontal_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rl_rect_gray_selector"
        android:paddingBottom="7dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="7dp" >

        <TextView
            style="@style/rl_rect_set_text"
            android:text="震动" />

        <ToggleButton
            android:id="@+id/zhengdong_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/btn_sys_set_toggle"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

</LinearLayout>