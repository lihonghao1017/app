<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />

    <RadioGroup
        android:id="@+id/rg_open_account"
        style="@style/open_account_nav_group">

        <RadioButton
            android:id="@+id/rb_net_account"
            style="@style/open_account_nav"
            android:checked="true"
            android:text="网上开户" />

        <RadioButton
            android:id="@+id/rb_subscribe_account"
            style="@style/open_account_nav"
            android:text="预约开户" />

        <RadioButton
            android:id="@+id/rb_simulate_account"
            style="@style/open_account_nav"
            android:text="模拟开户" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_account_cursor"
        style="@style/nav_cursor" />

    <View style="@style/nav_title_unline" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>