<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/counselor_reply_list_item"
    android:paddingTop="12dp"
    android:paddingLeft="7dp"
    android:paddingBottom="7dp"
    android:paddingRight="7dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_ask_time"
        android:layout_alignParentRight="true"
        style="@style/Text.Deep.Gray.Slight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2分种" />

    <TextView
        android:id="@+id/tv_ask_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fdsfsdf"
        android:layout_toLeftOf="@id/tv_ask_time"
        style="@style/Text.Gray.Blue.General" />

    <TextView
        android:id="@+id/tv_ask_content"
        android:layout_below="@id/tv_ask_nickname"
        android:text="fdskfddddddddddddddddddddddddddddddjd\nskjkfd"
        style="@style/Text.Black.General"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
