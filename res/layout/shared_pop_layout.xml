<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/CalenPopwindow_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="11dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#323336"
        android:textSize="16sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@id/CalenPopwindow_cancle"
        android:background="#7F8085" />

    <LinearLayout
        android:id="@+id/CalenPopwindow_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/line"
        android:background="#ffffff"
        android:paddingBottom="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shared_weixinhaoyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/logo_wechat"
            android:gravity="center"
            android:text="微信好友"
            android:textColor="#323336"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shared_pengyouquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/logo_wechatmoments"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="#323336"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shared_xinlangweibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/logo_sinaweibo"
            android:gravity="center"
            android:text="新浪微博"
            android:textColor="#323336"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shared_tengxunweibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/logo_tencentweibo"
            android:gravity="center"
            android:text="腾讯微博"
            android:textColor="#323336"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/CalenPopwindow_center_layout"
        android:alpha="0.6"
        android:background="@android:color/white"
        android:padding="11dp"
        android:text="分享到"
        android:textColor="#323336"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/text"
        android:alpha="0.6"
        android:background="@android:color/black" />

</RelativeLayout>